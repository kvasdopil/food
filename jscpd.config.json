{
  "threshold": 9,
  "mode": "strict",
  "reporters": ["console"],
  "ignore": [
    "**/node_modules/**",
    "**/.next/**",
    "**/out/**",
    "**/dist/**",
    "**/.yarn/**",
    "**/data/recipes/**/*.yaml",
    "**/coverage/**",
    "**/__tests__/**",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/test/**"
  ],
  "patterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.cjs"]
}
